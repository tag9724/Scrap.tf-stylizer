{
    "manifest_version": 2,

    "name": "Scrap.tf stylizer",
    "description": "This extension give more features for scrap.tf",
    "version": "1.0.3",

    "icons": {
        "16": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "index.html",
        "default_title": "Scrap.tf stylizer"
    },
    "content_scripts": [{
        "matches": ["*://*.scrap.tf/*"],
        "js": ["js/main.js"],
        "run_at": "document_start"
    }, {
        "matches": ["*://*.scrap.tf/raffles/create"],
        "js": ["js/lib/inject.js", "js/IN_createRaffle.js"],
        "css": ["css/createRaffle.css"]
    }, {
        "matches": ["*://*.scrap.tf/raffles/*"],
        "js": ["js/raffle.js"]
    }, {
        "matches": ["*://*.scrap.tf/weapons/*", "*://*.scrap.tf/skins/*", "*://*.scrap.tf/stranges/*"],
        "js": ["js/lib/injectMulti.js", "js/IN_globalFilter.js"],
        "css": ["css/filter.css"],
        "run_at": "document_start"
    }],
    "web_accessible_resources": [
        "js/inject/*",
        "mp3/*",
        "css/*",
        "img/*"
    ],
    "permissions": [
        "storage",
        "*://*.scrap.tf/*"
    ]
}
